{% extends 'base.html.twig' %}

{% block title %}Distrito index{% endblock %}

{% block body %}
    <h1>Distrito index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for distrito in distritos %}
            <tr>
                <td>{{ distrito.id }}</td>
                <td>{{ distrito.nombre }}</td>
                <td>
                    <a href="{{ path('app_distrito_show', {'id': distrito.id}) }}">show</a>
                    <a href="{{ path('app_distrito_edit', {'id': distrito.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_distrito_new') }}">Create new</a>
{% endblock %}
