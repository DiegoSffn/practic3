{% extends 'base.html.twig' %}

{% block title %}Provincias{% endblock %}

{% block body %}
    <h1>Provincias</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provincium in provincias %}
            <tr>
                <td>{{ provincium.descripcion }}</td>
                <td>
                    <a href="{{ path('app_provincia_show', {'id': provincium.id}) }}">Mostrar</a>
                    <a href="{{ path('app_provincia_edit', {'id': provincium.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no se encontro datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_provincia_new') }}">Crear</a>
{% endblock %}
